<h1>Create a new user</h1>

<%= form_for @user do |f| %>
  Username <br>
  <%= f.text_field :username %>
  <br><br>
  Email <br>
  <%= f.text_field :email %>
  <br><br>
  Password <br>
  <%= f.password_field :password %>
  <br><br>
  Confirm Password <br>
  <%= f.password_field :password_confirmation %>
  <br><br>
  <%= f.submit %>
<% end %>
